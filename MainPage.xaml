<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="android_tictactoe.MainPage">

    <Grid RowDefinitions="*, *, *" ColumnDefinitions="*, *, *" x:Name="TicTacToeBoard">

        <Button Grid.Row="0" Grid.Column="0" Text="" Clicked="OnCounterClicked" />
        <Button Grid.Row="0" Grid.Column="1" Text="" Clicked="OnCounterClicked" />
        <Button Grid.Row="0" Grid.Column="2" Text="" Clicked="OnCounterClicked" />

        <Button Grid.Row="1" Grid.Column="0" Text="" Clicked="OnCounterClicked" />
        <Button Grid.Row="1" Grid.Column="1" Text="" Clicked="OnCounterClicked" />
        <Button Grid.Row="1" Grid.Column="2" Text="" Clicked="OnCounterClicked" />

        <Button Grid.Row="2" Grid.Column="0" Text="" Clicked="OnCounterClicked" />
        <Button Grid.Row="2" Grid.Column="1" Text="" Clicked="OnCounterClicked" />
        <Button Grid.Row="2" Grid.Column="2" Text="" Clicked="OnCounterClicked" />

    </Grid>

</ContentPage>